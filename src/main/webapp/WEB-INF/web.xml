    <context-param>
    	<param-name>projectName</param-name>
      	<param-value>WebX</param-value>
    </context-param>
      
    <listener>
    	<listener-class>listener.XServletContextListener</listener-class>
    </listener> 
    <listener>
    	<listener-class>listener.XHttpSessionListener</listener-class>
    </listener> 
     
    <servlet>
    	<servlet-name>Servlet1</servlet-name>
        <servlet-class>servlet.Servlet1</servlet-class>
        <init-param>
       		<param-name>servletName</param-name>
       		<param-value>servlet1</param-value>
    	</init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
	
    <servlet-mapping>
         <servlet-name>Servlet1</servlet-name>
         <url-pattern>/servlet1</url-pattern>
    </servlet-mapping>
	
